def max_allowed(week, base_target, num_weeks):
    return math.ceil(week * base_target / num_weeks) + 1

def is_forbidden_repeat(person, cleanup, last_cleanup, repeat_count):
    if last_cleanup is None:
        return False

    # kitchen & deck_0: no consecutive repeats
    if cleanup in {"kitchen", "deck_0"}:
        return cleanup == last_cleanup

    # other cleanups: allow at most one consecutive repeat
    if cleanup == last_cleanup and repeat_count >= 1:
        return True

    return False



